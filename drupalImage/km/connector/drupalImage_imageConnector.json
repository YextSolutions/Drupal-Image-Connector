{
  "$id": "drupalImage_imageConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v3",
  "displayName": "Drupal Image Connector",
  "entityType": "drupalImage_image",
  "source": {
    "sourceConfig": {
      "apiPullConfig": {
        "requestType": "GET",
        "url": "${{drupalDomain}}/jsonapi/media/image",
        "paginationControl": {
          "cursorPagination": {
            "cursor": "links.next.href",
            "cursorType": "FULL_URL",
            "detectCursorInHeader": false
          }
        },
        "headers": {
          "Accept": "application/vnd.api+json",
          "Content-Type": "application/vnd.api+json"
        },
        "queryParams": {},
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "data"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Name",
        "path": "attributes.name"
      },
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Created Date",
        "path": "attributes.created"
      },
      {
        "type": "JSON",
        "header": "Image URL",
        "path": "relationships.field_media_image.data.id"
      },
      {
        "type": "JSON",
        "header": "Creator",
        "path": "relationships.uid.data.id"
      }
    ]
  },
  "transforms": [
    {
      "extractText": {
        "inputHeader": "Created Date",
        "newColumnHeader": "Created Date - Formatted",
        "extractOperation": "ALL_TEXT_BEFORE",
        "extractFrom": "FIRST_INSTANCE_MATCHING_TEXT",
        "valueToFind": {
          "plainText": {
            "value": "T",
            "ignoreCase": false
          }
        }
      }
    },
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Image URL"
          ]
        },
        "plugin": "drupalImage_extractFileUrl",
        "function": "extractFileUrl"
      }
    },
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Creator"
          ]
        },
        "plugin": "drupalImage_getUser",
        "function": "getUser"
      }
    }
  ],
  "mappings": [
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "primaryPhoto",
      "header": "Image URL",
      "subfieldPath": [
        {
          "name": "image"
        },
        {
          "name": "url"
        }
      ]
    },
    {
      "field": "drupalImage_creator",
      "header": "Creator",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "drupalImage_createdDate",
      "header": "Created Date - Formatted",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
      "timeZone": "America/New_York",
      "startDate": "2022-10-03",
      "startTime": "00:00",
      "frequencyType": "DAILY"
    },
    "runMode": "COMPREHENSIVE"
  }
}